# Токен бота от BotFather
BOT_TOKEN=your_bot_token_here

# ID администраторов бота (можно узнать через @userinfobot)
# Для нескольких админов разделите запятыми: 123456789,987654321,555666777
ADMIN_IDS=your_telegram_user_id

# Главный администратор (первый в списке, имеет дополнительные права)
# Если не указан, используется первый из ADMIN_IDS
SUPER_ADMIN_ID=your_main_admin_id

# Порт для HTTP сервера (опционально, по умолчанию 3000)
# Полезно для мониторинга состояния бота или webhook
PORT=3000
